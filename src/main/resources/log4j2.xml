<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.hibernate.engine.jdbc.batch.internal.BatchingBatch" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="logging.level.org.hibernate.SQL" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="logging.level.org.springframework.jdbc.core" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.orm.learn_orm" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>